[ui]
strict = true
username = Matteo Landi <matteo@matteolandi.net>
ignore = ~/.hgignore
#commitsubrepos = false

[extensions]
color =
pager =
prompt = ~/opt/hg-prompt/prompt.py
record = 
shelve =

[alias]
d = diff -p --color=auto
dl = !"$HG" diff -p --color=never $@ | vim -R -c 'set ft=diff' -
p = push
pu = pull -u
stq = st -q
cm = ci -m
cmm = commit -m 'Merge.'
