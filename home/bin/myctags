#!/bin/bash

set -e
set -x

if [ -e /usr/local/bin/ctags ]; then
    CTAGS=/usr/local/bin/ctags 
else
    export LC_COLLATE=C

    CTAGS=`which ctags`
fi
FIND=`which find`

rm -f tags

${CTAGS} --exclude=build --exclude=dist -R . && sed -i.bak -E -e '/^[^    ]+      [^      ]+.py   .+v$/d' tags

mv tags tags1

${FIND} . -iname '*.js' | grep -Ev '(.min.js|jquery[-.].*.js|.json$|^./build|^./Resources|^./venv)' | xargs jsctags -f tags2


echo '!_TAG_FILE_FORMAT	2	/extended format; --format=1 will not append ;" to lines/' > tags
echo '!_TAG_FILE_SORTED	1	/0=unsorted, 1=sorted, 2=foldcase/' >> tags

cat tags1 tags2 | grep -Ev '^!' | grep -v 'anonymous_function' | sort >> tags

rm tags1 tags2
