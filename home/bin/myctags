#!/bin/bash

export LC_COLLATE=C

/usr/bin/ctags-exuberant --exclude=build --exclude=dist --recurse . ~/.virtualenvs/$(cat .venv)/lib && sed -i.bak -E -e '/^[^    ]+      [^      ]+.py   .+v$/d' tags

mv tags tags1

find -name '*.js' | grep -Ev '(.min.js|jquery[-.].*.js|third-party|fixtures|rosetta|soundcloud|.json$|sample.dfxp|swfobject|flowplayer)' | xargs jsctags -f tags2


echo '!_TAG_FILE_FORMAT	2	/extended format; --format=1 will not append ;" to lines/' > tags
echo '!_TAG_FILE_SORTED	1	/0=unsorted, 1=sorted, 2=foldcase/' >> tags

cat tags1 tags2 | grep -Ev '^!' | grep -v 'anonymous_function' | sort >> tags

rm tags1 tags2
