[user]
name = Matteo Landi
email = matteo@matteolandi.net

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
    default = current
[alias]
    st = status -s
    ci = commit -v
    pu = pull
    p = push
    di = diff
    in = !git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{u}
    spu = !git submodule foreach git pull
[core]
	excludesfile = /home/matteo/.gitignore_global
