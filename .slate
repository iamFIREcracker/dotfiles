config defaultToCurrentScreen true

alias hyper ctrl;shift

alias full      move screenOriginX;screenOriginY               screenSizeX;screenSizeY
bind k:${hyper} ${full}
alias big move screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/10 3*screenSizeX/4;8*screenSizeY/10
bind j:${hyper} ${big}

alias halfleft  move screenOriginX;screenOriginY               screenSizeX/2;screenSizeY
bind h:${hyper} ${halfleft}
alias halfright move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
bind l:${hyper} ${halfright}

alias bigleft  move screenOriginX;screenOriginY               2*screenSizeX/5;screenSizeY
bind y:${hyper} ${bigleft}

alias bigright move screenOriginX+screenSizeX/4;screenOriginY 3*screenSizeX/4;screenSizeY
bind o:${hyper} ${bigright}

alias halftop move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
bind i:${hyper} ${halftop}
alias halfbottom move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
bind m:${hyper} ${halfbottom}

alias normal move screenOriginX+screenSizeX/8;screenOriginY 3*screenSizeX/4;screenSizeY
bind u:${hyper} ${normal}
alias narrow move screenOriginX+screenSizeX/6;screenOriginY 2*screenSizeX/3;screenSizeY
bind n:${hyper} ${narrow}

bind delete:${hyper} relaunch
