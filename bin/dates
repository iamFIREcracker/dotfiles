#!/usr/bin/env bash

# Print the current time in a bunch of timezones where
# people I work with, live

set -euo pipefail

echo "Jakarta:  $(TZ=:Asia/Jakarta date)"
echo "India:    $(TZ=:Asia/Calcutta date)"
echo "Italy:    $(TZ=:Europe/Rome date)"
echo "England:  $(TZ=:Europe/London date)"
echo "New York: $(TZ=:America/New_York date)"
press-enter-to-exit
