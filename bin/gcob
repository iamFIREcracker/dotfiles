#!/usr/bin/env bash

set -uo pipefail
set -x

story=$(cb | tr '\n' ':')
id=$(echo $story | cut -d: -f1 | tr '[:upper:]' '[:lower:]')
desc=$(echo $story | cut -d: -f3-)
branch=$(echo $desc  \
  | tr '[:upper:]' '[:lower:]' \
  | tr -d '\[\]():,\r"'"'" \
  | tr ' ' '-' \
  | tr '/' '-' \
  | sed "s/--*/-/g" \
  | sed "s/-$//")
echo "git cob story/$id/${branch}" | cg-fzf
