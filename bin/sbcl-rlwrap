#!/usr/bin/env bash

rlwrap \
  --multi-line=@ \
  --multi-line-ext .lisp \
  --only-cook '^\[[a-zA-Z ]+\] [-a-zA-Z0-9._/]+>' \
  --prompt-colour=Cyan \
  --quote-characters '"' \
  --histsize 1000 \
  --history-filename "$HOME/.rlwrap-lisp-history" \
  -- sbcl --dynamic-space-size 4000 --load ~/.sbclrc "$@"
