#!/usr/bin/env bash

rlwrap \
  --multi-line=@@ \
  --multi-line-ext .lisp \
  --only-cook '^\[[a-zA-Z ]+\] [-a-zA-Z0-9._/]+>' \
  --prompt-colour=Cyan \
  --quote-characters='"' \
  --histsize 10000 \
  --history-filename "$HOME/.rlwrap-lisp-history" \
  -- sbcl --dynamic-space-size 2000 --load ~/.sbclrc "$@"
