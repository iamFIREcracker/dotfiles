if [ -d ~/opt/aadbook/venv/Scripts/ ]; then
  if [ "$1" == "authenticate" ]; then
      # Use `winpty` for all the interactive commands
      winpty "$(cygpath -u ~/opt/aadbook/venv/Scripts/aadbook.exe)" "$@"
    else
      "$(cygpath -u ~/opt/aadbook/venv/Scripts/aadbook.exe)" "$@"
    fi
else
    ~/opt/aadbook/venv/bin/aadbook "$@"
fi
