[general]
# NOTE: cronjob calls the quiet UI with -u
ui = TTYUI
accounts = MatteoLandi, IONGroup
pythonfile = ~/.mutt/offlineimap.py
fsync = False

[Account MatteoLandi]
localrepository = MatteoLandi-Local
remoterepository = MatteoLandi-Remote
postsynchook = notmuch --config ~/.mutt/.notmuch-config-matteolandi new

[Repository MatteoLandi-Local]
type = Maildir
localfolders = ~/.mail/matteo-matteolandi.net
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            'spam':    '[Gmail]/Spam',
                            }.get(folder, folder)

[Repository MatteoLandi-Remote]
ssl = True
sslcacertfile = /usr/local/etc/openssl/cert.pem
maxconnections = 1
type = Gmail 
remoteuser = matteo@matteolandi.net
remotepasseval = get_keychain_pass(service="imap.gmail.com", account="matteo@matteolandi.net")
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            '[Gmail]/Spam':      'spam',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Important',
                                             ]

[Account IONGroup]
localrepository = IONGroup-Local
remoterepository = IONGroup-Remote
postsynchook = notmuch --config ~/.mutt/.notmuch-config-iongroup new

[Repository IONGroup-Local]
type = Maildir
localfolders = ~/.mail/matteo.landi-iongroup.com
nametrans = lambda folder: {'drafts':  'Drafts',
                            'sent':    'Sent Items',
                            'flagged': 'Starred',
                            'trash':   'Deleted Items',
                            'archive': 'Archive',
                            }.get(folder, folder)

[Repository IONGroup-Remote]
ssl = True
sslcacertfile = /etc/ssl/certs/ca-bundle.crt
maxconnections = 1
type = IMAP
remotehost = outlook.office365.com
remoteuser = matteo.landi@iongroup.com
remotepasseval = get_keychain_pass(service="outlook.office365.com", account="matteo.landi@iongroup.com", )
realdelete = no
nametrans = lambda folder: {'Drafts':        'drafts',
                            'Sent Items':    'sent',
                            'Starred':       'flagged',
                            'Deleted Items': 'trash',
                            'Archive':       'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder in ['INBOX',
                                         'Drafts',
                                         'Sent Items',
                                         'Starred',
                                         'Deleted Items',
                                         'Archive',
                                         '!!needs-action',
                                         '!needs-action',
                                         '*needed-soon',
                                         '?awaits-reply',
                                         '>delegated',
                                         'gitlab',
                                         'connection-notifications',
                                         'yammer'
                                        ]
