root=true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 80
tab_width = 2

[*.java]
max_line_length = 120

[*.{js,scala,ts}]
max_line_length = 100

[*.lisp]
max_line_length = 100

[Makefile]
indent_style = tab

[.vimrc]
indent_size = 4
tab_width = 4

[pom.xml]
indent_size = 2
tab_width = 2

[*.md]
max_line_length = 80

[*.plan]
max_line_length = 0
